<html>
<head>
	<%= stylesheet_link_tag "screen.css" %>
	<%= stylesheet_link_tag "print.css" %>
	<%= stylesheet_link_tag "custom.css" %>
</head>
<body>
	<div class="container">
	<%- flash.each do |key, msg| -%>
		<%- content_tag :div, :class => "flash_#{key}" do %>
			<%= msg %>
		<% end %>
	<%- end -%>
	<%= yield %>		
	</div>
</body>
</html>
